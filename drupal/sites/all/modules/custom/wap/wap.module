/**
 * Implementation of hook_menu().
 */
function wap_menu() {
  $items = array();
  $items['calc'] = array(
      'title' => 'Calculator',
      'description' => 'Calculator',
      'page callback' => 'wap_calc',
      'access callback' => TRUE,
      'type' => MENU_CALLBACK,
  );
  $items['admin/config/development/jasmine'] = array(
    'title' => 'Jasmine Spec Runner',
    'description' => 'Run Jasmine tests for the site.',
    'page callback' => 'wap_jasmine',
    'file' => 'wap.jasmine.inc',
    'access arguments' => array('administer site configuration'),
  );
  return $items;
}

/**
 * Implementation of hook_theme().
 */
function wap_theme() {
  $themes['jasmine_specrunner'] = array(
      'variables' => array(
        'flowplayer' => null
      ),
      'template' => 'wap.specrunner',
    );
  $themes['wap_calc'] = array(
      'template' => 'wap_calc',
      'variables' => array(),
  );
  return $themes;
}

function wap_calc() {
  return theme('wap_calc');
}
